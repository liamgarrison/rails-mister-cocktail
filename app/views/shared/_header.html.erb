<header class="d-flex p-4 bg-light border-bottom align-items-center justify-content-between">
  <%= link_to cocktails_path, class: 'text-decoration-none' do %>
    <h3 class="m-0 text-dark">Cocktail Wizard</h3>
  <% end %>
  <div class="navbar-right">
    <form class="form-inline" action="/cocktails">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-group">
        <input class="form-control" type="text" name="q" placeholder="Search for cocktails">
        <input class="ml-3 form-control btn btn-success" type="submit" value="Search">
      </div>
    </form>
  </div>
</header>
