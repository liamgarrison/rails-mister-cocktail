<div class="container my-5">
  <h1>Add a cocktail</h1>

  <%= simple_form_for [@cocktail] do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Add Cocktail", class: "btn btn-primary" %>
  <% end %>
</div>
