<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @cocktail.photo, crop: :fill %>);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <p><%= @cocktail.doses.length %> <%= @cocktail.doses.length == 1 ? "ingredient" : "ingredients" %></p>
  </div>
</div>
<div class="container my-5">
  <div class="row">
    <div class="col-8">
      <h2>Description</h2>
      <%= @cocktail.description %>
      <h2>Add an review</h2>
      <%= simple_form_for [@cocktail, @review] do |f| %>
        <%= f.input :stars %>
        <%= f.input :description %>
        <%=  %>
        <%= f.submit "Add", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-4">
      <h2>Ingredients</h2>
      <ul class="list-group"></ul>
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item d-flex justify-content-between">
            <p class="m-0">
              <strong><%= dose.ingredient.name %>:</strong> <%= dose.description %>
            </p>
            <%= link_to dose_path(dose), method: :delete do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
      <p><%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary mt-3' %></p>
    </div>
  </div>
</div>
