<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.image_url %>);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <p><%= @cocktail.doses.length %> <%= @cocktail.doses.length == 1 ? "dose" : "doses" %></p>
  </div>
</div>
<div class="container my-5">
  <h2>Doses</h2>
  <ul class="list-group"></ul>
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item d-flex justify-content-between">
        <p class="m-0">
          <strong><%= dose.ingredient.name %>:</strong> <%= dose.description %>
        </p>
        <%= link_to dose_path(dose), method: :delete do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <p><%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary mt-3' %></p>
  <p><%= link_to "Back", cocktails_path %></p>
</div>
