<div class="container my-5">
  <% if @search_term %>
    <h1>Search results for "<%= @search_term %>" (<%= @cocktails.length %> results)</h1>
  <% else %>
    <h1>All cocktails</h1>
  <% end %>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <%= link_to cocktail_path(cocktail), class: 'card-cocktail-link' do %>
          <div class="card-cocktail-content" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cocktail.image_url %>')">
            <p>
                <%= cocktail.name %>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
